{
  "extends": "tslint:recommended",
  "rules": {
    "max-line-length": {
      "options": [160]
    },
    "no-bitwise": false,
    "whitespace": false,
    "interface-over-type-literal": false,
    "object-literal-sort-keys": false,
    "no-trailing-whitespace": false,
    "no-console": {
      "severity": "warning",
      "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
    }
  }
}
